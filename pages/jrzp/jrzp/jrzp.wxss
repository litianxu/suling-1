/* 长期工  小时工   兼职  按钮选择 */

.box {
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
   background-color: #fff 
}
.box_list{
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
    justify-content: space-around;
    margin-top: 10rpx;      
}
.box-image{
    height: 84rpx;
    width: 84rpx;
    margin-bottom: 10rpx;
}
.box-text{
    font-size: 28rpx;
}
.active{
  color: red;
   
}
.active text{
  padding: 16rpx 16rpx;
  border-bottom: 4rpx solid red;
  
 
}

