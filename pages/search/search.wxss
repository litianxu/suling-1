
/* pages/search/search.wxss */
page{
height: auto;
background-color: #ededed 
}
.searchContainer{
margin: 0 auto
}
.Container-title{
display: flex;
flex-direction:column;
width: 100%;
height:420rpx;
background-color: #fff;
border-bottom: 10rpx solid #ededed
}
.Container-image image{
width:98%;
height:300rpx;
margin-left: 1%;
margin-top: 1%;
border-radius:8rpx
}
.Container-text{
display: flex;
flex-direction: column;
text-align:center;
padding-top:10rpx 
}
.text-time{
padding-top: 10rpx;
font-size: 26rpx;
color: rgb(199, 196, 196)
}
